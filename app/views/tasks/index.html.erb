<h1>Todo App</h1>
<div ng-app="app">
  <div ng-controller="tasksCtrl">
    <ul>
      <li ng-repeat="task in tasks track by $index" ng-click="toggleComplete(task)" ng-class="{completed: task.completed}">{{ task.text }}</li>
    </ul>
    <div>
      <input ng-model="newTask">
      <button ng-click="addTask(newTask)">Add Task</button>
    </div>
  </div>
</div>